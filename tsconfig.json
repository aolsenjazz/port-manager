{
  "compilerOptions": {
    "target": "ES2018",
    "module": "UMD",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./build"
  },
  "exclude": [
    "test",
    "release"
  ],
  "include": [
    "./src/midi-port-manager.ts"
  ]
}
